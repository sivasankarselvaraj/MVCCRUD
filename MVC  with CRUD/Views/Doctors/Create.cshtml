@model DataAccesse_Layer.Doctors

@{
    ViewData["Title"] = "Create";
}

<h1 class="pl-5">Create</h1>

<h4 class="pl-5">Doctors</h4>
<hr />
<div class="row p-5">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoctorsName" class="control-label"></label>
                <input asp-for="DoctorsName" class="form-control" />
                <span asp-validation-for="DoctorsName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PassoutYear" class="control-label"></label>
                <input asp-for="PassoutYear" type="tel" class="form-control" />
                <span asp-validation-for="PassoutYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualification" class="control-label"></label>
                <input asp-for="Qualification" class="form-control" />
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addresss" class="control-label"></label>
                <input asp-for="Addresss" class="form-control" />
                <span asp-validation-for="Addresss" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="@(new SelectList(Model.Locations,"LocationId","LocationName"))">
                    <option value="0">--Select--</option>

                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
